    -->
    <style name="MyStyle">
        <item name="android:windowActionBar">false</item>

    </style>

    <!--夜间主题-->
    <style name="NightTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="ColorText">@color/nodeColor</item>
        <item name="ThemeBgColor">@color/theme_bg_color</item>
    </style>
    <!--日间主题-->
    <style name="DayTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="ColorText">@color/theme_bg_color</item>
        <item name="ThemeBgColor">@color/spint_whihe</item>
    </style>

</resources>
